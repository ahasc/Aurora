{
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "spec/**/*"
  ],
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": [
      "dom",
      "es2015"
    ],
    "target": "es5",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": [
      "node",
      "mocha"
    ],
    "typeRoots": [
      "../node_modules/@types"
    ],
    "declaration": true,
    "declarationDir": "types",
  }
}
